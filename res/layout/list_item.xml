<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/list_bg"
    >
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="3dp">
       <ImageView android:layout_width="wrap_content" android:layout_marginLeft="4dp" android:visibility="gone" android:paddingTop="15dp" android:contentDescription="@null" android:layout_alignParentLeft="true" android:paddingRight="10dp" android:layout_height="wrap_content" android:src="@drawable/location_flag" android:id="@+id/list_item_icon"/>
       <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignLeft="@id/list_item_icon"
            android:textColor="@color/blank"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/list_item_text"
            />
    </RelativeLayout>
    <View
            android:layout_height="1dip"
            android:layout_width="match_parent"
            android:background="#ccc"
            />
</LinearLayout>